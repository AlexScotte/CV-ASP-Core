@page
@using Microsoft.Extensions.Localization;
@using CV_ASP_Core.Resources;
@model CV_ASP_Core.Pages.ContactModel
@inject IStringLocalizer<Resource> SharedLocalizer


@if (!string.IsNullOrEmpty(Model.Contact?.Phone) && !string.IsNullOrWhiteSpace(Model.Contact?.Phone)) {

    <div class="row" style="margin:20px 0;">

        <div class="column left-col"> </div>

        <div style="width:50%">

            <img src="Images/phone.png" style="float:left; max-height:50px; max-width:50px;" />

            <h5 style="margin:10px 80px;">@Model.Contact.Phone</h5>
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(Model.Contact?.Email) && !string.IsNullOrWhiteSpace(Model.Contact?.Email)) {

    <div class="row" style="margin:20px 0;">

        <div class="column left-col"> </div>

        <div style="width:50%">

            <img src="Images/email.png" style="float:left; max-height:50px; max-width:50px;" />

            <h5 style="margin:10px 80px;">@Model.Contact.Email</h5>
        </div>

    </div>
}

@foreach (var link in Model.Contact?.ExternalLinks) {

    <div class="row" style="margin: 20px 0;">

        <div class="column left-col"> </div>

        <a href="@link.Url" style="text-decoration:none; color:black; width: 50% ">
            <img src="@link.ImageUrl" style="float:left; max-height:50px; max-width:50px;" />

            <h5 style="margin:10px 80px;">@Model.FormatLink(link.Url)</h5>
        </a>
    </div>
}



<div class="row" style="margin: 20px 0; position:absolute; bottom:0; left:25%; width:50%">
    <div class="column left-col"> </div>

    <a href="@Model.Contact?.CvUrl" style="text-decoration:none; color:black; width: 50% ">
        <div class="button button4" style="width: 100%">@SharedLocalizer["contact_download"]</div>
    </a>
</div>



