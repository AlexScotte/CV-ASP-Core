@using CV_ASP_Core.Resources;
@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<Resource> SharedLocalizer
@model CV_ASP_Core.Models.Profile

<div id="logo-container"style="display:flex; align-items:center; justify-content:center;">
    <img class="circular--square" src="@Model.ImageUrl" style="max-height:5%; max-width:5%;" />
</div>

<h2 class="card-text" style="display:flex; align-items:center; justify-content:center;">@($"{Model.FirstName} {Model.LastName}")</h2>
<h3 class="card-text" style="display:flex; align-items:center; justify-content:center;">@Model.Job</h3>
<h5 class="card-text" style="display:flex; align-items:center; justify-content:center;">@Model.Location</h5>



